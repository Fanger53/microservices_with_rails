# Circuit breaker para resiliencia
gem "circuit_breaker", "~> 2.0"

group :development, :test do
  gem "debug", "~> 1.9", platforms: %i[ mri windows ], require: "debug/prelude"
  gem "brakeman", "~> 6.2", require: false
