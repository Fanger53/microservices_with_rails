# Redis para cache y jobs
gem "redis", "~> 5.3"

# Serialización JSON
gem "jbuilder", "~> 2.12"

# Comunicación entre servicios
gem "faraday", "~> 2.12"
gem "faraday-retry", "~> 2.2"

# Para auditoría avanzada
gem "paper_trail", "~> 15.0"  # Versionado de modelos
gem "lograge", "~> 0.14"      # Logging estructurado
gem "ahoy_matey", "~> 5.2"    # Analytics y tracking
gem "chronic", "~> 0.10"      # Parsing de fechas natural

# Business logic
gem "dry-validation", "~> 1.10"
gem "dry-transaction", "~> 0.16"
gem "dry-events", "~> 1.0"    # Event-driven architecture

# Autorización y seguridad
gem "pundit", "~> 2.4"        # Políticas de autorización
gem "rack-cors", "~> 2.0"     # CORS

# Monitoring y observabilidad
gem "prometheus_exporter", "~> 2.1"  # Métricas
